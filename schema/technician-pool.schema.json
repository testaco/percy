{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["license_class", "version", "group_titles", "questions"],
  "properties": {
    "license_class": {
      "type": "string",
      "enum": ["technician"]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{4}$"
    },
    "group_titles": {
      "type": "object",
      "patternProperties": {
        "^T[0-9][A-Z]$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "group", "question", "answers", "correct_answer"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^T[0-9][A-Z][0-9]{2}$"
          },
          "group": {
            "type": "string",
            "pattern": "^T[0-9][A-Z]$"
          },
          "question": {
            "type": "string"
          },
          "answers": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": {
              "type": "object",
              "required": ["option", "text"],
              "properties": {
                "option": {
                  "type": "string",
                  "enum": ["A", "B", "C", "D"]
                },
                "text": {
                  "type": "string"
                }
              }
            }
          },
          "correct_answer": {
            "type": "string",
            "enum": ["A", "B", "C", "D"]
          }
        }
      }
    }
  }
}
