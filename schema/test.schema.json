{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Amateur Radio Test",
  "type": "object",
  "required": ["test_id", "timestamp", "source_pool", "questions"],
  "properties": {
    "test_id": {
      "type": "string",
      "pattern": "^test_\\d{8}_\\d{6}$",
      "description": "Unique test ID in format test_YYYYMMDD_HHMMSS"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of test creation"
    },
    "source_pool": {
      "type": "object",
      "required": ["license_class", "version", "file"],
      "properties": {
        "license_class": {
          "type": "string",
          "enum": ["technician", "general", "extra"]
        },
        "version": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{4}$",
          "description": "Question pool version years"
        },
        "file": {
          "type": "string",
          "pattern": ".*\\.json$",
          "description": "Source question pool filename"
        }
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "group", "question", "answers", "correct_answer"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[TGE]\\d[A-Z]\\d{2}$",
            "description": "Question ID matching license class"
          },
          "group": {
            "type": "string",
            "pattern": "^[TGE]\\d[A-Z]$",
            "description": "Question group identifier"
          },
          "question": {
            "type": "string",
            "minLength": 10,
            "description": "The question text"
          },
          "answers": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": {
              "type": "object",
              "required": ["option", "text"],
              "properties": {
                "option": {
                  "type": "string",
                  "enum": ["A", "B", "C", "D"]
                },
                "text": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },
          "correct_answer": {
            "type": "string",
            "enum": ["A", "B", "C", "D"],
            "description": "Must match one of the answer options"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "source_pool": {
            "properties": {
              "license_class": { "enum": ["technician", "general"] }
            }
          }
        }
      },
      "then": {
        "properties": {
          "questions": {
            "minItems": 35,
            "maxItems": 35
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "source_pool": {
            "properties": {
              "license_class": { "enum": ["extra"] }
            }
          }
        }
      },
      "then": {
        "properties": {
          "questions": {
            "minItems": 50,
            "maxItems": 50
          }
        }
      }
    }
  ]
}
